<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/df"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/nameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageItem"
        android:layout_marginStart="8dp"
        android:text="Название скина"
        android:fontFamily="monospace"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/priceItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageItem"
        android:layout_below="@id/nameItem"
        android:layout_marginStart="8dp"
        android:text="Цена"
        android:fontFamily="monospace"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/countVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageItem"
        android:layout_below="@id/priceItem"
        android:layout_marginStart="8dp"
        android:text="Кол-во голосов"
        android:fontFamily="monospace"
        android:textSize="18dp"
        />

</RelativeLayout>